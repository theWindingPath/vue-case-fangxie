border-1px-fangfa($color-canshu)
  position relative
  &::after
      display block
      position absolute
      bottom: 0
      left 0
      width 100%
      border-top: 1px solid $color-canshu
      content: ' '

// 取消一像素下边框
border-1px-none()
  &::after
    display none
 
//  图片函数
 bg-image-hanshu($url)
   background-image: url($url + "@2x.png")
  //  最小dpr为3的设备用3倍图
   @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
     background-image: url($url + "@3x.png")